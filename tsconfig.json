        "lib": ["es5", "es6"],
        "target": "es2015",
        "outDir": "dist",
        "rootDir": "src",
        "noImplicitAny": false,
        "module": "commonjs",
        "moduleResolution": "node",
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "sourceMap": true
